<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sarafinmahtab.tnsassistant">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_tns_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_tns_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".teacher.TeacherActivity" />
        <activity android:name=".student.StudentActivity" />
        <activity android:name=".teacher.TeacherDashboard" />
        <activity android:name=".teacher.studentlist.StudentList" />
        <activity android:name=".student.stdcourses.AllCoursesActivity" />
        <activity android:name=".teacher.marksheet.MarkSheetActivity" />
        <activity android:name=".teacher.examsetup.ExamSetupActivity" />
    </application>

</manifest>
