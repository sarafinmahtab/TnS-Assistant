<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.sarafinmahtab.tnsassistant.student.StudentActivity"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_teacher_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorTnSPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ImageView
            android:id="@+id/teacher_display_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="7dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="60dp"
            android:contentDescription="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/teacher_display_pic"
            tools:layout_conversion_absoluteHeight="120dp"
            tools:layout_conversion_absoluteWidth="120dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="0dp" />

        <TextView
            android:id="@+id/email_of_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:layout_conversion_absoluteX="127dp"
            tools:layout_conversion_absoluteY="43dp"
            tools:layout_conversion_absoluteWidth="34dp"
            tools:layout_conversion_absoluteHeight="16dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/teacher_code" />

        <TextView
            android:id="@+id/teacher_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:hint="Code"
            android:textAlignment="viewStart"
            android:textColor="#123456"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/designation"
            app:layout_constraintTop_toBottomOf="@+id/email_of_teacher"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="41dp"
            tools:layout_conversion_absoluteX="127dp"
            tools:layout_conversion_absoluteY="60dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="72dp"
            android:hint="Teacher's Name"
            android:textAlignment="viewStart"
            android:textColor="#123456"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/email_of_teacher"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="129dp"
            tools:layout_conversion_absoluteX="127dp"
            tools:layout_conversion_absoluteY="22dp" />

        <TextView
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:hint="Desig"
            android:textAlignment="viewStart"
            android:textColor="#123456"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@+id/teacher_details"
            app:layout_constraintTop_toBottomOf="@+id/teacher_code"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="44dp"
            tools:layout_conversion_absoluteX="127dp"
            tools:layout_conversion_absoluteY="81dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text=", "
            android:textAlignment="gravity"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/designation"
            app:layout_constraintTop_toTopOf="@+id/designation"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="8dp"
            tools:layout_conversion_absoluteX="171dp"
            tools:layout_conversion_absoluteY="81dp" />

        <TextView
            android:id="@+id/dept_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:hint="Dept"
            android:textAlignment="gravity"
            android:textColor="#123456"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="37dp"
            tools:layout_conversion_absoluteX="180dp"
            tools:layout_conversion_absoluteY="81dp" />


        <Button
            android:id="@+id/change_image"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#123456"
            android:text="Change Image"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_conversion_absoluteWidth="93dp"
            tools:layout_conversion_absoluteX="14dp"
            tools:layout_conversion_absoluteY="120dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/teacher_display_pic"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/teacher_display_pic"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/teacher_display_pic" />

        <Button
            android:id="@+id/teacher_details"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#123456"
            android:text="Update Details"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/change_image"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_conversion_absoluteWidth="250dp"
            tools:layout_conversion_absoluteX="127dp"
            tools:layout_conversion_absoluteY="120dp"
            app:layout_constraintLeft_toRightOf="@+id/teacher_display_pic"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/course_list_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/border"
            android:text="Running Courses"
            android:textColor="#123456"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/course_loader"
            app:layout_constraintTop_toBottomOf="@+id/change_image" />

        <Button
            android:id="@+id/course_loader"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:background="#123456"
            android:text="Load"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/course_list_header"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/course_list_header"
            app:layout_constraintVertical_bias="0.0" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cousres_list"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/course_list_header"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/course_loader"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/course_list_header"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.00999999" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
