<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sarafinmahtab.tnsassistant.teacher.marksheet.TeacherCustomize">


    <Button
        android:id="@+id/update_btn_custom"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:text="Update"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/help_btn_custom"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/help_btn_custom"
        app:layout_constraintTop_toTopOf="@+id/help_btn_custom"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/help_btn_custom"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Help"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/custom_header"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/set_rules_for_your_course"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_btn_custom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/custom_header"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout_custom_tt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="184dp">

            <TextView
                android:id="@+id/custom_tt1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Term Test 1"
                app:layout_constraintBottom_toBottomOf="@+id/tt1_percent_sign"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tt1_percent_sign"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/custom_tt1_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20"
                app:layout_constraintBottom_toBottomOf="@+id/customize_tt1"
                app:layout_constraintTop_toTopOf="@+id/customize_tt1"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="228dp" />

            <TextView
                android:id="@+id/tt1_percent_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="%"
                app:layout_constraintBottom_toBottomOf="@+id/custom_tt1_percent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/custom_tt1_name"
                app:layout_constraintRight_toLeftOf="@+id/custom_tt1_percent"
                app:layout_constraintTop_toTopOf="@+id/custom_tt1_percent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/customize_tt1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/mark_update_icon2"
                tools:layout_editor_absoluteY="102dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
