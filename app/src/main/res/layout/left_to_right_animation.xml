<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/leftRightTvOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/dot"
        android:textColor="@color/fox_red"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/leftRightTvTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftRightTvOne"
        android:layout_toEndOf="@id/leftRightTvOne"
        android:text="@string/dot"
        android:textColor="@color/fox_red"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/leftRightTvThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftRightTvTwo"
        android:layout_toEndOf="@id/leftRightTvTwo"
        android:text="@string/dot"
        android:textColor="@color/fox_red"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/leftRightTvFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftRightTvThree"
        android:layout_toEndOf="@id/leftRightTvThree"
        android:text="@string/dot"
        android:textColor="@color/fox_red"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/leftRightTvFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftRightTvFour"
        android:layout_toEndOf="@id/leftRightTvFour"
        android:text="@string/dot"
        android:textColor="@color/fox_red"
        android:textSize="30sp"
        android:visibility="visible" />

</merge>
